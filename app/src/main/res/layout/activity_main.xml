<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/id1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
       android:textAlignment="textEnd"
        android:layout_marginHorizontal="10dp"
        android:textSize="28sp"
        android:hint="0"/>


    <Button
        android:id="@+id/btn1"
        android:layout_below="@id/id1"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:textColorHint="@color/white"
        android:layout_height="wrap_content"
        android:backgroundTint="#1c1c1c"
        android:hint="1"/>

    <Button
        android:id="@+id/btn2"
        android:layout_below="@id/id1"
        android:backgroundTint="#1c1c1c"
        android:layout_toRightOf="@id/btn1"
        android:layout_width="wrap_content"
        android:textColorHint="@color/white"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="2"/>

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:backgroundTint="#1c1c1c"
        android:layout_height="wrap_content"
        android:layout_below="@id/id1"
        android:textColorHint="@color/white"
        android:layout_toRightOf="@id/btn2"
        android:layout_margin="10dp"
        android:hint="3"/>

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id1"
        android:layout_marginStart="10dp"
        android:backgroundTint="#1c1c1c"
        android:textColorHint="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/btn3"
        android:textSize="20sp"
        android:hint="+" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:backgroundTint="#1c1c1c"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn1"
        android:textColorHint="@color/white"
        android:layout_margin="10dp"
        android:hint="4"/>

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn5"
        android:textColorHint="@color/white"
        android:layout_below="@id/btn2"
        android:layout_margin="10dp"
        android:backgroundTint="#1c1c1c"
        android:hint="5"

        />

    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:textColorHint="@color/white"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn3"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/btn6"
        android:backgroundTint="#1c1c1c"
        android:hint="6" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:layout_below="@id/btn4"
        android:layout_marginStart="10dp"
        android:backgroundTint="#1c1c1c"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="25sp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/btn7"
        android:hint="-" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn5"
        android:backgroundTint="#1c1c1c"
        android:layout_margin="10dp"
        android:textColorHint="@color/white"
        android:hint="7"/>

    <Button
        android:id="@+id/btn10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn9"
        android:layout_below="@id/btn6"
        android:textColorHint="@color/white"
        android:backgroundTint="#1c1c1c"
        android:layout_margin="10dp"
        android:hint="8"/>

    <Button
        android:id="@+id/btn11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn10"
        android:layout_below="@id/btn7"
        android:textColorHint="@color/white"
        android:backgroundTint="#1c1c1c"
        android:layout_margin="10dp"
        android:hint="9"/>

    <Button
        android:id="@+id/btn12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn8"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/btn11"
        android:backgroundTint="#1c1c1c"
        android:hint="*"
        android:textSize="20sp"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/btn13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:backgroundTint="#1c1c1c"
        android:layout_below="@id/btn9"
        android:layout_margin="10dp"
        android:hint="."/>
    <Button
        android:id="@+id/btn14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1c1c1c"
        android:textColorHint="@color/white"
        android:layout_toRightOf="@id/btn13"
        android:layout_below="@id/btn10"
        android:layout_margin="10dp"
        android:hint="0"
        />

    <Button
        android:id="@+id/btn15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn11"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/btn14"
        android:backgroundTint="#1c1c1c"
        android:hint="C"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/btn16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn12"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/btn15"
        android:backgroundTint="#1c1c1c"
        android:hint="/"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/btn17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn15"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#839e2e"
        android:hint="=" />





</RelativeLayout>